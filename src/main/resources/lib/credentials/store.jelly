<!--                </div>-->
<!--            </div>-->

            <j:set var="credentials" value="${domainWrapper.credentials.values()}" />

            <j:forEach var="credential" items="${domainWrapper.credentials.values()}">
                            <j:set var="storeAction" value="${store.storeAction}"/>
                            <j:set var="safeDescription" value="${credential.description == null ? null : app.markupFormatter.translate(credential.description)}" />
                            <div class="credentials-card">
                                <div class="credentials-card__inner ${credential.masked?'masked-credential':null}">
                                    <div class="credentials-card__title">
                                        <l:icon class="${credential.iconClassName}" tooltip="${credential.kind}"/>
                                        <a href="${(storeAction==null?credential.store.getRelativeLinkTo(credential.domain):credential.store.relativeLinkToContext+'credentials/store/'+storeAction.urlName+'/'+credential.domain.url)+'credential/'+credential.id}">
                                            ${credential.displayName}
                                        </a>
                                    </div>
                                    <div class="credentials-card__details">
                                        ${credential.id}
                                        <j:if test="${!empty(safeDescription)}">
                                            <span>-</span>
                                            ${safeDescription}
                                        </j:if>
                                    </div>
                                </div>
                                <div class="credentials-card__controls">
                                    <j:if test="${h.hasPermission(c, it.parent.UPDATE)}">
                                        <a href="credential/${c.urlName}/update"
                                           tooltip="${%Configure}"
                                           class="jenkins-button jenkins-button--tertiary">
                                            <l:icon src="symbol-settings"/>
                                        </a>
                                        <l:overflowButton clazz="jenkins-button--tertiary">
                                            <dd:item icon="symbol-swap"
                                                     text="${%Move credential}"
                                                     href="credential/${c.urlName}/move" />
                                            <dd:separator />
                                            <dd:custom>
                                                <l:confirmationLink class="jenkins-dropdown__item jenkins-!-destructive-color"
                                                                    href="credential/${c.urlName}/doDelete"
                                                                    title="${%delete.credential(c.displayName)}"
                                                                    post="true"
                                                                    destructive="true">
                                                    <div class="jenkins-dropdown__item__icon">
                                                        <l:icon src="symbol-trash" />
                                                    </div>
                                                    ${%Delete credential}
                                                </l:confirmationLink>
                                            </dd:custom>
                                        </l:overflowButton>
                                    </j:if>
                                </div>
                            </div>
                        </j:forEach>
        </j:forEach>
    </div>
    </div>
</j:jelly>
