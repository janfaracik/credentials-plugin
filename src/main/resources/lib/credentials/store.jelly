<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:l="/lib/layout" xmlns:dd="/lib/layout/dropdowns">
    <st:documentation>
        A reusable Store card.
        <st:attribute name="fromParent" />
    </st:documentation>

    <j:set var="storeAction" value="${store.storeAction}" />

    <div class="jenkins-section">
        <div class="jenkins-section__title idkparent">
            <l:icon src="${store.contextIconClassName}" class="jenkins-avatar icon-sm" tooltip="${store.provider.displayName}"/>

            ${store.context == app ? store.displayName : store.contextDisplayName}

            ${attrs.fromParent ? '(from parent)' : ''}
        </div>

    <div class="credentials-wrapper">
        <j:forEach var="domainWrapper" items="${storeAction.domains.values()}">
